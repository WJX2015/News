<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo_g50_70.newspad.activity.GuideActivity">

    <Button
        android:id="@+id/btnGuide"
        android:text="立即体验"
        android:background="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="170dp"
        android:textColor="@android:color/white"
        android:layout_width="150dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        />

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/guide_img1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/guide_img1"
            />

        <ImageView
            android:id="@+id/guide_img2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/guide_img2"
            />

        <ImageView
            android:id="@+id/guide_img3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/guide_img3"
            />
    </ViewFlipper>

    <LinearLayout
        android:id="@+id/layout_point_wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip"
        android:layout_marginRight="10dip"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:src="@drawable/red"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:src="@drawable/write"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:src="@drawable/write"/>


    </LinearLayout>
</RelativeLayout>
